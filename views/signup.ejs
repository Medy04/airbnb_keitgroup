<h1 class="page-title"><%= typeof title !== 'undefined' ? title : 'Créer un compte' %></h1>
<form method="post" action="/signup" class="card" style="padding:16px;max-width:420px">
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="empty" style="margin-bottom:10px;color:#fecaca;border-color:#7f1d1d"> <%= error %> </div>
  <% } %>
  <div class="row">
    <input class="input" name="email" type="email" placeholder="Email" required />
    <input class="input" name="password" type="password" placeholder="Mot de passe" required />
  </div>
  <button class="btn">Créer mon compte</button>
  <div class="small muted" style="margin-top:8px">Déjà un compte ? <a href="/login">Se connecter</a></div>
</form>
